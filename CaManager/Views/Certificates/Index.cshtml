@model List<Azure.Security.KeyVault.Certificates.KeyVaultCertificateWithPolicy>

@{
    ViewData["Title"] = "Root CA Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-light"><i class="bi bi-shield-lock me-2"></i>Root Certificate Authorities</h1>
    <div>
        <a asp-action="SignStart" class="btn btn-warning btn-lg me-2"><i class="bi bi-pen me-2"></i>Sign CSR</a>
        <a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-lg"></i> Create New</a>
        <a asp-action="Import" class="btn btn-outline-secondary"><i class="bi bi-upload"></i> Import</a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-dark text-white border-bottom border-secondary">
        <h5 class="mb-0">Active Root CAs</h5>
    </div>
    <div class="table-responsive">
        <table class="table table-dark table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th class="border-0 rounded-start ps-4">Name</th>
                    <th class="border-0">Thumbprint</th>
                    <th class="border-0">Expires On</th>
                    <th class="border-0">Enabled</th>
                    <th class="border-0 rounded-end text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cert in Model)
                {
                    <tr>
                        <td class="ps-4 fw-bold">@cert.Name</td>
                        <td class="font-monospace text-muted small">
                             @(cert.Properties.X509Thumbprint != null ? BitConverter.ToString(cert.Properties.X509Thumbprint) : "N/A")
                        </td>
                        <td>
                            @if(cert.Properties.ExpiresOn.HasValue) {
                                <span class="badge @(cert.Properties.ExpiresOn.Value < DateTimeOffset.UtcNow.AddMonths(1) ? "bg-danger" : "bg-success")">
                                    @cert.Properties.ExpiresOn.Value.ToString("yyyy-MM-dd")
                                </span>
                            }
                        </td>
                        <td>
                            @if(cert.Properties.Enabled == true) {
                                <span class="badge bg-primary">Enabled</span>
                            } else {
                                <span class="badge bg-secondary">Disabled</span>
                            }
                        </td>
                        <td class="text-end pe-4">
                             <a asp-action="Sign" asp-route-id="@cert.Name" class="btn btn-sm btn-outline-light" title="Details"><i class="bi bi-three-dots"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
