@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" IsDarkMode="true" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@inject IConfiguration Configuration

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">@Configuration["AppTitle"]</MudText>
        <MudSpacer />
        <LoginDisplay /> 
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavMenu>
            <MudText Typo="Typo.h6" Class="px-4 pt-4 pb-2">Root CAs</MudText>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>

            
            <MudDivider Class="my-2" />
            <MudText Typo="Typo.h6" Class="px-4 pt-4 pb-2">Operations</MudText>
            <MudNavLink Href="/sign" Icon="@Icons.Material.Filled.Edit">Sign CSR</MudNavLink>
            <MudNavLink Href="/generate" Icon="@Icons.Material.Filled.Autorenew">Generate CSR</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    MudTheme _theme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#0d6efd",
            AppbarBackground = "#212529",
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#0d6efd",
            Surface = "#2c3034",
            Background = "#212529",
            AppbarBackground = "#1c1f23",
            DrawerBackground = "#1c1f23"
        }
    };

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
